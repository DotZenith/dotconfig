# vim
alias ls='lsd'
alias la='lsd -a'
alias lla='lsd -la'

# vim
alias vim='nvim'
alias vi='\vim'
alias v='\vi'

# others
alias kit='nvim ~/.config/kitty/kitty.conf'
alias lg='lazygit'
alias top='bpytop'
alias ssh='kitty +kitten ssh'
alias nssh='\ssh'
alias s='source ~/.config/zsh/.zshrc'
alias sync='rsync -uvrP --delete-after'
