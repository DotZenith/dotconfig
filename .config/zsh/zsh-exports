# Just the normal path stuff
PATH=/opt/local/bin:/opt/local/sbin:$PATH
PATH=$HOME/bin:/usr/local/bin:$PATH
PATH=$PATH:$HOME/.scripts
PATH=$PATH:$HOME/.cargo/bin
PATH="/usr/local/opt/python@3.10/bin:$PATH"
PATH="/usr/local/opt/lua@5.3/bin:$PATH"
export PATH

# lua
export LDFLAGS="-L/usr/local/opt/lua@5.3/lib"
export CPPFLAGS="-I/usr/local/opt/lua@5.3/include"
export PKG_CONFIG_PATH="/usr/local/opt/lua@5.3/lib/pkgconfig"

# Python bug
unset PYTHONPATH
unset PYTHONHOME

# For the starship config
export STARSHIP_CONFIG=~/.config/starship/config.toml

# Defaults
export EDITOR='nvim'
export TERMINAL='alacritty'
export BROWSER='brave'
