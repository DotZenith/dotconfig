[user]
	name = dotzenith
  email = dotzenith@gmail.com

[init]
  defaultBranch = main

[pull]
  rebase = false

[alias]
  s = status -sb
  d = diff
  a = add
  aa = add -A
  b = branch
  co = checkout
  cob = checkout -b
  c = commit
  cm = commit -m

[core]
  excludesfile = ~/.config/git/gitignore_global
  editor = nvim

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[delta]
  line-numbers = true
  side-by-side = true
  navigate = true    # use n and N to move between diff sections
  light = false      

[interactive]
  diffFilter = delta --color-only

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
